
<div class="row">
  <div class="small-6 columns">
<%= form_for [@shop, @item] do |f| %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :category %><br>
    <%= f.text_area :category %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :price %><br>
    <%= f.text_area :price %>
  </p>

  <p>
    <%= f.label :cost %><br>
    <%= f.text_area :cost %>
  </p>

  <div class="field">
    <%= f.label :photo %><br />
    <%= f.file_field :photo %>
  </div>

  <p>
    <%= f.submit %>
  </p>
<% end %>
</div>
</div>
