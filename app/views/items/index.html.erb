<div class="content-block">
<h2><%= @shop.name %></h2>
<hr>

<% @items.each do |item| %>

  <div class="menu-item-block">
  <div class="row">
    <div class="large-3 columns">
      <%= image_tag(item.photo.url) %>
    </div>
    <div class="large-2 columns">
      <% if item.shop.user == current_user %>
        <%= link_to item.name, edit_shop_item_path(item.shop, item) %>
      <% else %>
        <p> <%= item.name %> </p>
      <% end %>
    </div>
    <div class="large-3 columns">
      <p> <%= item.description %> </p>
    </div>
    <div class="large-2 columns">
      <p> <%= item.price %> </p>
    </div>
    <div class="large-2 columns">
      <p><%= button_to 'order item', shop_orderjoins_path(item.shop , item_id: item.id), class: :button, method: :post  %></p>
    </div>

  </div>
</div>
<% end %>

<% if @shop.user == current_user %>
  <%= link_to 'add item', new_shop_item_path(@shop), class: "button" %>
<% end %>


<%= link_to 'view order', shop_order_path(@shop,@shop), class: "button" %>

</div>
