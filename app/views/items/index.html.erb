<% @items.each do |item| %>
<div class="row">
<div class="large-3 columns">
<%= image_tag(item.photo.url) %>
</div>
<div class="large-3 columns">
<% if item.shop.user == current_user %>
<%= link_to item.name, edit_shop_item_path(item.shop, item) %>
<% else %>
<p> <%= item.name %> </p>
<% end %>
</div>
<div class="large-3 columns">
<p> <%= item.description %> </p>
</div>
<div class="large-3 columns">
<p> <%= item.price %> </p>
</div>
</div>
<% end %>

<% if @shop.user == current_user %>
<%= link_to 'add item', new_shop_item_path(@shop), class: "button" %>
<% end %>


